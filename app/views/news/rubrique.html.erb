		<div class="breadcrumbs clearfix">
			
<section class="breadcrumbs"><span xmlns:v="http://rdf.data-vocabulary.org/#"><span typeof="v:Breadcrumb"><a href="" rel="v:url" property="v:title">Accueil</a> &gt; <span class="breadcrumb_last">Vie municipale</span></span></span></section>		</div>
		<!-- end of breadcrumbs -->

		
		
<div class="content-col left">
	<h1 class="page-title">Liste des actualités dans la catégorie : <em><%=@category.name%></em></h1>
	<%=render partial: "mynewsitem", as: :news, collection: @news%>

<div class='wp-pagenavi'>
<span class='pages'>Page <%=@page%> sur <%=@nbpage%></span>
<%(1..@nbpage).to_a.each do |a|%>
<%=
    params[:page] ? (link_to_unless_current(a, actualitespage_path(page: a), class: "larger page") do
       "<span class='current'>#{a}</span>".html_safe
    end) : "<span class='current'>1</span>"
 %>
<%end%>
<%if @nbpage > 5%>
<span class='extend'>…</span>
<%(10..30).step(10).to_a.select{|t|t <= @nbpage}.each do |t|%>
<%if @page.between?((t-11),t) || @page == t%>
<%=
       ("<span class='extend'>…</span>"+((@page-2)..(@page+2)).map{|h|(link_to_unless((@page == h),h, actualitespage_path(page: h), class: "larger page") do
                "<span class='current'>#{h}</span>"
                 end)}.join('')+"<span class='extend'>…</span>").html_safe
    
 %>

<%else%>
<%=
    link_to_unless_current(a, actualitespage_path(page: a), class: "larger page") do
       ("<span class='extend'>…</span>"+((a-2)..(a+2)).map{|h|(link_to_unless((@page == h),h, actualitespage_path(page: h), class: "larger page") do
                "<span class='current'>#{h}</span>"
                 end)}.join('')+"<span class='extend'>…</span>").html_safe
    end
 %>
<%end%>
<%end%>
<%if @nbpage >= 30 %>
<%=
       ("<span class='extend'>…</span>"+((@page-2)..(@page+2)).map{|h|(link_to_unless((@page == h),h, actualitespage_path(page: h), class: "larger page") do
                "<span class='current'>#{h}</span>"
                 end)}.join('')+"<span class='extend'>…</span>").html_safe
    
 %>
<%end%>



<span class='extend'>…</span>


<%end%>
<%if @page < @nbpage%>
<a class="nextpostslink" rel="next" href="/agenda/page/<%=@page+1%>/">&raquo;</a>
<%end%>
<%if 5 < @nbpage%>
<a class="last" href="/actualites/page/<%=@nbpage%>/">Dernière page &raquo;</a>
<%end%>


</div>
	    

</div>



		


